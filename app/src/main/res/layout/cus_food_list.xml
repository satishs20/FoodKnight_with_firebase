<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:clipToPadding="false"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false"
    app:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cus_foodImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_image_24"/>

        <TextView
            android:id="@+id/cus_foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/cus_foodImg"
            android:layout_toRightOf="@id/cus_foodImg"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cus_foodDesc"
            android:textSize="20sp"
            android:layout_toRightOf="@id/cus_foodImg"
            android:layout_toEndOf="@id/cus_foodImg"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/cus_foodName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cus_foodPrice"
            android:textSize="20sp"
            android:layout_toRightOf="@id/cus_foodImg"
            android:layout_toEndOf="@id/cus_foodImg"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/cus_foodDesc"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>